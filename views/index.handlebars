<style>
        h3 {
            text-align: center;
        }
        input {
            height: 150px;
            width: 250px;
            margin-left: 375px;
            text-align: center;
            }
        #submit{
            margin-left: 375px;
            padding: 10px;
        }
</style>

<h3>Eat-Da-Burger</h3>
<div>
    <div class="body">
        {{#each burgers}}
            <p>{{this.name}}</p>
        {{/each}}
    </div>
    <form>
        <input type="text" placeholder="Enter your burger order here!" id="submission">
    </form>
    <br>
        <button id="submit">Submit</button>
</div>
<script type="text/javascript">
$(document).ready(function(){
    $("#submit").on("click", function(event){
        event.preventDefault();
        var newSearch = $("#submission").val().trim();
        console.log("Burger: ", newSearch);
        var newBurger = {
            name: newSearch
        }
        console.log("I've been submitted!");
        $("#submission").val('');

        $.post("/api/newBurgers", newBurger).done(function(data){
            //console.log(data);
            $(".body").append('<p>' + newSearch + '</p>');
            $(".body").append('<button class="eat">Devour It</button>')
        })
    });

    $(".eat").click(function(){
        console.log("clicked!");
        $.post("/api/eatenBurgers").done(function(data){
            console.log(data);
        });
    }); 
});
</script>




